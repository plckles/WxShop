page {
    overflow:hidden; background: #ececec;} 
.swiper-tab{
  width: 100%;  
  text-align: center;  
  height: 108rpx;
  position: absolute;
  display: inline-flex;
  z-index: 500;
  top: 0;
  background-color: #fff;}  
.order-cell:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; overflow-y:auto}  
.order-cell , .swiper-tab-list{
  position: relative;
}
.swiper-box swiper-item {
    overflow-y:auto }
.swiper-box .order-list{  
   padding:20rpx 20rpx 0; 
   font-size:28rpx;} 
.swiper-tab-list{font-size:30rpx;width: 50%;color: #666; justify-content: center;} 
