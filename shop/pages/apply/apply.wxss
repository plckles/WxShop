.header{
  width: 100%;
  height: 260rpx;
  margin: 0 auto;
  margin-top: 60rpx;
}
.photo{
  width: 188rpx;
  height: 188rpx;
  margin:0 auto;
  border-radius:50%;
  overflow:hidden;
}
.photo image{
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
}
.con{
  width: 90%;
  margin: 0 auto;
}
.yanz{
  width: 100%;
  height: 80rpx;
  box-shadow: 0px 10rpx 20rpx #d0d0d0;
  margin-bottom: 50rpx;
  border-radius: 50rpx;
}
.yanz input{
  width: 405rpx;
  height: 70rpx;
  border-bottom-left-radius: 50px;
  border-top-left-radius: 50px;
  overflow: hidden;
  padding-left: 30rpx;
}
.inp{
  width:96%;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 0px 10rpx 20rpx #d0d0d0;
  margin-bottom: 50rpx;
  border-radius: 40rpx;
  overflow: hidden;
  padding-left: 30rpx;
}
.btn{
  color: #fff;
  border-radius: 45rpx;
  margin-top: 45rpx;
  background:#ebcc6d;
  height:88rpx;
